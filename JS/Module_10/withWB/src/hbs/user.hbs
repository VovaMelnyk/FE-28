<article class="card">
    <header class="card__title">
        <h3>{{name}}</h3>
    </header>
    <main class="card__description">
        <table class="user-table">
            <tr>
                <td>username</td>
                <td>{{username}}</td>
            </tr>
            <tr>
                <td>email</td>
                <td>{{email}}</td>
            </tr>
            <tr>
                <td>address</td>
                <td>{{address.city}}, {{address.street}}, {{address.suite}}, {{address.zipcode}}</td>
            </tr>
            <tr>
                <td>phone</td>
                <td>{{phone}}</td>
            </tr>
            <tr>
                <td>website</td>
                <td>{{website}}</td>
            </tr>
            <tr>
                <td>company</td>
                <td>{{company.name}}</td>
            </tr>
        </table>
    </main>
</article>